<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#BEEFF4E7"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <TextView
            android:textColor="#56BC60"
            android:layout_margin="15dp"
            android:id="@+id/instructionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunregular"
            android:gravity="center"
            android:text="Please\nadd the info of your eye drops!"
            android:textSize="23dp" />


        <ListView
            android:id="@+id/eyeDropListView"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_margin="20dp"
            android:clickable="false"
            android:focusable="true"
            android:focusableInTouchMode="false" />

        <ImageButton
            android:id="@+id/addEyedropBtn"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/add18" />

        <Button
            android:id="@+id/finishBtn"
            android:layout_width="match_parent"
            android:layout_height="57dp"
            android:layout_margin="30dp"
            android:background="@drawable/edit_round"
            android:fontFamily="@font/cookierunregular"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>