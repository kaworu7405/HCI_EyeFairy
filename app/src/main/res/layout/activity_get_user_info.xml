<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BEEFF4E7"
    tools:context=".getUserInfoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="16dp">

        <TextView
            android:textColor="#56BC60"
            android:id="@+id/greetText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/cookierunregular"
            android:gravity="center"
            android:text="Hi! Nice to meet you"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:textColor="#022C06"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:fontFamily="@font/cookierunregular"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Name"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/userName"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingLeft="20dp"
                android:fontFamily="@font/cookierunregular"
                android:ems="10"
                android:gravity="center"
                android:inputType="textPersonName"
                android:textSize="18dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/surgeryDate"
                android:fontFamily="@font/cookierunregular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#022C06"
                android:gravity="center"
                android:text="Surgery Date"
                />

            <TextView
                android:id="@+id/surgeryDateInput"
                android:layout_width="match_parent"
                android:fontFamily="@font/cookierunregular"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/datePicker"
                android:background="#BEEFF4E7"
                android:fontFamily="@font/cookierunregular"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/calendar" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:weightSum="3"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/cookierunregular"
                android:gravity="center"
                android:textColor="#022C06"
                android:text="Surgery Time"
                />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="18dp" />

            <ImageButton
                android:id="@+id/timePicker1"
                android:layout_width="match_parent"
                android:background="#BEEFF4E7"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/time_icon2" />

        </LinearLayout>

        <Button
            android:id="@+id/nextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="40dp"
            android:fontFamily="@font/cookierunregular"
            android:layout_weight="1"
            android:background="@drawable/edit_round"
            android:text="NEXT"
            android:textColor="@color/white"
            android:textSize="25dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>